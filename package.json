{
  "name": "mc-lxd-manager",
  "private": true,
  "version": "0.3.0",
  "workspaces": [
    "apps/agent",
    "apps/server",
    "apps/web"
  ],
  "scripts": {
    "dev": "npm -C apps/server run dev",
    "build": "npm -C apps/web run build && npm -C apps/server run build && npm -C apps/agent run build",
    "start": "npm -C apps/server run start",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier -w .",
    "test": "npm -C apps/agent run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^22.7.4",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
